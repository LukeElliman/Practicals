BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: mile_input
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: "Up"

            Button:
                id: down_button
                text: "Down"
    Button:
        id: convert_mile_km_input
        text: "Convert mile to km"
        on_press: app.handle_press()
    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)