BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ''
            size_hint_x: 3
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
            id: output_label
            text: 'Enter your name'
            size_hint_x: 3
            color: (1, 1, 0, 1)