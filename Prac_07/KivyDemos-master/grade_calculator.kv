BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
        TextInput:
            id: input_grade
            text: ''
            size_hint_x: 3
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Calculate'
            on_press: app.handle_calculate()
        Label:
            id: output_grade
            text: 'Enter your grade'
            size_hint_x: 3
            color: (1, 1, 0, 1)